<h1>Edit your Skills!</h1>
<h3><%= current_user.name %></h3>
<div>

  <table>
    <tr>
      <td><%= current_user.name %></td>
      <td><% current_user.proficiencies.each do |proficiency| %>
        <p><%= proficiency.skill %></p>
        <% end %>
      </td>

      <td><% @user.proficiencies.each do |proficiency| %>
        <p><%= proficiency.years %></p>
        <% end %>
      </td>

      <td><% @user.proficiencies.each do |proficiency| %>
        <p><%= proficiency.formal %></p>
        <% end %>
      </td>
    </tr>
  </table>

</div>



<form id="edit" method="post" action="/edit">
  <label class="edit_label" for="name">Name</label>
  <input type="text" name="name" value="<%= current_user.name %>">
  <label class="edit_label" for="skills">Skills (select one to add):</label>
  <select id="skills" name="skills">
    <% current_user.skills.each do |skill| %>
      <option value="<%= skill.name %>"<%=skill.name%></option>
    <%end%>
  </select>

  <label class="edit_label" for="years">Years of experience:
    <input id="years" type="text" name="years"></label>
    <label class="edit_label" for="formal">Formal education? </label>
    <select id="formal" name="formal">
      <option value="true">Yes</option>
      <option value="false">No</option>
    </select>
  </label>
<div class="submit"><input type="submit" value="Save"></div>
</form>
