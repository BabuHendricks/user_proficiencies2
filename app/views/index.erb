<div class="container">
  <h1>User Skills and Levels</h1>


 <table>
  <th>User</th>
  <th>Skill</th>
  <th>Years</th>
  <th>Formal?</th>
  <% if @users %>
    <% @users.each do |user| %>
      <tr>
        <% if user.id == session[:user_id] %>
          <td><a href="/edit/<%= @user.id%>"><%= user.name %></a></td>
        <% else %>
          <td><%= user.name %></td>
        <% end %>

        <td><% user.skills.each do |skill| %>
            <p><%= skill.name %></p>
            <% end %>
        </td>

        <td><% user.skills.each do |skill| %>
          <p><%= Proficiency.find_by(skill_id: skill.id, user_id: user.id).years %></p>
          <% end %>
        </td>

        <td><% user.skills.each do |skill| %>
          <p><%= Proficiency.find_by(skill_id: skill.id, user_id: user.id).formal %></p>
          <% end %>
        </td>
       </tr>
    <% end %>
  <% end %>
 </table>

</div>
